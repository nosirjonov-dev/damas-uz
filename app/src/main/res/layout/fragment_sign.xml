<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fon_1"
    tools:context=".fragments.SignFragment">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rad_g_1"
            android:src="@drawable/damas"/>

        <RadioGroup
            android:id="@+id/rad_g_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_1"
            app:layout_constraintBottom_toTopOf="@id/btn_next_1"
            >
            <RadioButton
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_yolovchi"
                android:textSize="20sp"
                android:padding="10dp"
                android:text="Yo'lovchi"/>
            <RadioButton
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_haydovchi"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="Haydovchi"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:text="Ko'proq ma'lumot olish"
            app:layout_constraintTop_toBottomOf="@id/rad_g_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_next_1"/>

        <Button
            android:id="@+id/btn_next_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rad_g_1"
            android:text="Keyingi"
            android:textSize="20sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>